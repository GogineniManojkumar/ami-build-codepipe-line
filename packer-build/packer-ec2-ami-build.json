{
    "builders" : [
        {
            "type": "amazon-ebs",
            "region": "ap-south-1",
            "instance_type": "t2.micro",
            "ssh_username": "ec2-user",
            "ami_name": "wordpress_ami_{{timestamp}}",
            "ami_description": "Image build by packer",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn-ami-hvm*",
                    "root-device-type": "ebs"
                },
                "owners": "amazon",
                "most_recent": true
            },
            "tags": {
                "Name": "AMI BUILD INSTANCE"
            }
        }   
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "packer-build/anisble_install.sh",
            "pause_before": "5s"
          },
        {
            "type": "ansible-local",
            "playbook_file": "packer-build/server-setup.yml",
            "pause_before": "5s"
          }
    ]

}