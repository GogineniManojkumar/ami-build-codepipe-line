{
    "builders" : [
        {
            "type": "amazon-ebs",
            "profile": "aws-local",
            "region": "ap-south-1",
            "instance_type": "t2.micro",
            "ssh_username": "ec2-user",
            "ami_name": "wordpress_ami_{{timestamp}}",
            "ami_description": "Image build by packer",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn-ami-hvm*",
                    "root-device-type": "ebs"
                },
                "owners": "amazon",
                "most_recent": true
            }
        }   
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "wp-deploy.sh",
            "pause_before": "10s"
        }
    ]

}
